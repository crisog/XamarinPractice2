<?xml version="1.0" encoding="UTF-8" ?>
<ContentView
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="INTECLogin.Views.MenuOptionButtonView">
    <ContentView.Content>
        <StackLayout Margin ="8">

            <Image Source="{Binding Image}"  HeightRequest="80" Margin="0,10,0,0" />

            <Label FontSize="18"
                FontAttributes="Bold"
                TextColor="Black"
                HorizontalOptions="CenterAndExpand"
                Text="{Binding Title}"/>

        </StackLayout>
    </ContentView.Content>
</ContentView>
